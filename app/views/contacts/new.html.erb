<div id="contact_form" class="container">
  <div class="row">
    <div class="col s12">
      <h1>Have any questions?</h1>
      <h5>Why not shoot us an email?</h5>
      <%= form_for @contact do |f| %>
        <div class="input-field col s12">
          <%= f.text_field :name, {class: 'validate'}%>
          <label>Name</label>
        </div>

        <div class="input-field col s12">
          <%= f.text_field :email, {class: 'validate'}%>
          <label data-error="wrong" data-success="right">Email</label>
        </div>

        <div class="input-field col s12">
          <%= f.text_area :message, {class: 'validate materialize-textarea'}%>
          <label>Your Message</label>
        </div>

        <div class="input-field col s12 hide">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>
        <button class="btn waves-effect waves-light orange" type="submit" name="action">Save
          <i class="material-icons right">send</i>
        </button>
      </div>
      <%end%>
    </div>
  </div>
</div>

