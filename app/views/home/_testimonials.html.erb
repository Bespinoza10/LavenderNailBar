<div id="testimonial-home" class="col s12">
  <div class="slider">
    <ul class="slides">
      <% @testimonials.each do |t|%>
        <li>
          <img src="/assets/testimonial-bg.jpg">
          <div class="caption left-align">
            <h3>"<%= t.description %>"</h3>
            <h5 class="light grey-text text-lighten-3">- <%= t.name %></h5>
            <%= link_to "Edit", edit_testimonial_path(t), {class: "btn waves-effect waves-light orange"} %></a>
            <%= link_to "Delete", root_path(t), method: :delete, data: { confirm: "Are you sure you want to delete this testimonial?" }, class: "btn waves-effect waves-light red" %></a>
          </div>
        </li>
      <%end%>  
    </ul>
    
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.slider').slider();
  });
</script>